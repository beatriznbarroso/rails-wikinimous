<%=form_for @article do |form| %>

<div class="form-group" style="margin: 20px 600px">
  <%= form.label :title %>
  <%= form.text_field :title, class: "form-control" %>
</div>

<div class=" form-group" style="margin: 0px 600px">
 <%= form.label :content %>
  <%= form.text_field :content, class: "form-control"%>
</div>

<div style="padding:10px">
  <%= form.submit %>
</div>

<%end%>
